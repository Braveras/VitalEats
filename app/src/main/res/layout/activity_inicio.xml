<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Inicio">

    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/barra"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/buttoninicio"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/inicio"
            android:layout_marginStart="100dp"
            android:elevation="20dp"
            android:background="@drawable/buttonbarraselect"
            >
        </ImageButton>
        <ImageButton
            android:id="@+id/buttonalimentos"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/alimentos"
            android:background="@drawable/buttonbarra">
        </ImageButton>
        <ImageButton
            android:id="@+id/buttonrecetas"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/recetas"
            android:background="@drawable/buttonbarra">
        </ImageButton>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>